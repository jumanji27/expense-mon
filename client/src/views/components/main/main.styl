.p_main
  flex-direction: column
  &__popup
    position: fixed
    z-index: 2
    top: 60px
    left: 50%
    width: 275px
    height: 200px
    background: #fff
    box-shadow: 4px 4px 30px #130507
    transition: top 800ms
  &__popup-content
    flex-direction: column
    flex: 1
    padding: 30px 30px 0
    input
      flex: 1
      font-size: 20px
      text-align: center
      border: 2px solid #5a5a5a
      padding: 5px 20px
  &__popup-content-buttons
    flex-direction: row
    flex: 3
    button
      flex: 1
      justify-content: center
      border-top: 2px solid #5a5a5a
      background #e4e4e4
      span
        font-size: 75px
        line-height: 30px
  &__popup-content-buttons-plus
    border-left: 2px solid #5a5a5a
    border-right: 1px solid #5a5a5a
  &__popup-content-buttons-minus
    border-left: 1px solid #5a5a5a
    border-right: 2px solid #5a5a5a
  &__popup-content-status
    flex: 1
    justify-content: center
    align-items: center
  &__popup-close
    position: absolute
    top: -20px
    right: -20px
    width: 40px
    height: 40px
    text-align: center
    cursor: pointer
    background: #fff
    border-radius: 20px
    border: 2px solid #5a5a5a
    span
      flex: 1
      font-size: 45px
      line-height: 30px
      text-align: center
      transform: rotate(45deg)
  &__popup-body
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: #000
    opacity: 0.7
    transition: opacity 800ms