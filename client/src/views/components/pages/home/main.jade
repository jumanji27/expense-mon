extends ../../../layouts/main/main.jade

block content
  .p_main.js_p-main
  .p_main__popup.js_popup.js_popup__slide-top
    .p_main__popup-close.js_popup__close
      span +
    .p_main__popup-content
      .p_main__popup-content-buttons
        button.p_main__popup-content-buttons-minus.js_popup__button.js_popup__remove
          span -
        button.p_main__popup-content-buttons-plus.js_popup__button.js_popup__add
          span +
      input(type='text', class='js_popup__comment', placeholder='Add comment')
      .p_main__popup-content-status.js_popup__status
  .p_main__popup-body.js_popup-body.js_popup-body__fadeout